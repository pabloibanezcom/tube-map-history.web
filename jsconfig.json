{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "assets/*": [
        "src/assets/*"
      ],
      "containers/*": [
        "src/containers/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "hoc/*": [
        "src/hoc/*"
      ],
      "http/*": [
        "src/http/*"
      ],
      "actions/*": [
        "src/store/actions/*"
      ],
      "reducers/*": [
        "src/store/reducers/*"
      ],
      "sagas/*": [
        "src/store/sagas/*"
      ],
      "shared/*": [
        "src/shared/*"
      ],
      "map/*": [
        "src/map/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}